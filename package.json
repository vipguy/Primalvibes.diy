{
  "name": "vibes.diy-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "it contains all elements of vibes.diy web page",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VibesDIY/vibes.diy.git"
  },
  "homepage": "https://vibes.diy",
  "bugs": {
    "url": "https://github.com/VibesDIY/vibes.diy/issues"
  },
  "scripts": {
    "xbuild:base": "pnpm --filter use-vibes-base build",
    "build": "core-cli tsc",
    "lint": "eslint .",
    "test": "cross-env DISABLE_REACT_ROUTER=true vitest --run",
    "test:coverage": "cross-env DISABLE_REACT_ROUTER=true vitest run --coverage --watch",
    "test:all": "cd vibes.diy/tests/app && pnpm run test && cd ../simple-chat && pnpm run test && cd ../../../prompts/tests && pnpm run test && cd ../../use-vibes/tests && pnpm run test && cd ../../call-ai/tests && pnpm run test",
    "playwright:claude": "playwright test -c claude-browse-vibes/playwright.config.js",
    "format": "prettier --write  --log-level silent .",
    "dev": "cd vibes.diy/pkg && pnpm run dev",
    "dev:router": "cd vibes.diy/pkg && pnpm run dev:router",
    "pack": "echo skip pack",
    "publish": "echo skip publish",
    "check": "pnpm format && pnpm build && pnpm test && pnpm lint",
    "storybook": "cd vibes.diy/pkg && cross-env DISABLE_REACT_ROUTER=true pnpm run storybook"
  },
  "keywords": [
    "ai",
    "llm",
    "api",
    "call",
    "openai",
    "streaming",
    "openrouter"
  ],
  "contributors": [
    "J Chris Anderson",
    "Selem Delul",
    "Meno Abels"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@fireproof/core-cli": "^0.23.13",
    "@playwright/test": "^1.55.0",
    "@types/deno": "^2.5.0",
    "@types/node": "^24.1.0",
    "@typescript/native-preview": "7.0.0-dev.20251001.1",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.31.0"
  },
  "dependencies": {
    "playwright": "^1.55.0"
  }
}
