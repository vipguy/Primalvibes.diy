+            <SandpackCodeEditor
+              style={{ height: '100%' }}
+              showLineNumbers={false}
+              wrapContent
+              showInlineErrors
+            />
+          </div>
+        </SandpackLayout>
+      </SandpackProvider>
+    </div>
+  );
+};
