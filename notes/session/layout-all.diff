+          isStreaming={isStreaming} 
+          shouldEnableScrolling={isStreaming || !codeReady}
+          codeReady={codeReady}
+          activeView={activeView}
+        />
+        <SandpackLayout className="h-full" style={{ height: 'calc(100vh - 49px)' }}>
